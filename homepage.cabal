  build-depends:       base >=4.8 && <4.9
                     , fn
                     , offset
                     , wai
                     , wai-util
                     , warp
                     , http-types
                     , logging
                     , text
                     , heist
                     , lens
                     , hedis
                     , mtl
                     , xmlhtml
                     , either
                     , blaze-builder
                     , bytestring
                     , unordered-containers
                     , data-default
                     , dotenv
                     , directory
                     , hspec
